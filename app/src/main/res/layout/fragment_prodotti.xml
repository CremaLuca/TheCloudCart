<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="org.cramest.thecloudcart.fragments.ProdottiFragment">

    <ListView
        android:id="@+id/listProdotti"
        style="@style/ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_aggiungi_prodotto"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_aggiungi_prodotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Aggiungi prodotto" />

</RelativeLayout>