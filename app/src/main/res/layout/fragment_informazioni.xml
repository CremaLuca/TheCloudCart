<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Informazioni su The Cloudcart"
        android:textAppearance="@android:style/TextAppearance.Material.Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="53dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_creatore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Da un idea di"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView_creatore_effettivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luca Crema"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView_prodotto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prodotto da"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView_prodotto_effettivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luca Crema"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView_versione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codice versione"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView_versione_effettiva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>