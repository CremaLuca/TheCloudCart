<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/textViewNomeProdotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Nome prodotto"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_toStartOf="@+id/text_view_quantita_duepunti" />

    <TextView
        android:id="@+id/text_view_quantita_duepunti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/text_view_quantita"
        android:text="@string/quantity_duepunti" />

    <TextView
        android:id="@+id/text_view_quantita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textViewDescrizioneProdotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:maxLines="2"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textViewNomeProdotto"
        android:layout_alignParentStart="true" />
</RelativeLayout>