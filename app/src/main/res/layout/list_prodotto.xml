<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/textViewQta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textViewNumProdotto"
        android:layout_alignEnd="@+id/textViewDescrizioneProdotto" />

    <TextView
        android:id="@+id/textViewNomeProdotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Piselli in scatola di gastaldanza"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textViewNumProdotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuantitÃ  : "
        android:layout_below="@+id/textViewNomeProdotto"
        android:layout_toStartOf="@+id/textViewQta" />

    <TextView
        android:id="@+id/textViewDescrizioneProdotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:maxLines="2"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/textViewQta"
        android:layout_alignParentStart="true" />
</RelativeLayout>