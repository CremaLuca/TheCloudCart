<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name='android:colorPrimaryDark'>@color/colorPrimaryDark</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/styledButton</item>
        <item name="android:listViewStyle">@style/ListView</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/colorBackground</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:listSelector">@color/colorAccentSecondary</item>
    </style>
    <style name="styledButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>